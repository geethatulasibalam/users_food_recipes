<%= form_for @dish do |f| %>
	<div class="form-group row">
		<div class="col-sm-12">
			<%= f.text_field :name,placeholder: "Name",class: "form-control form-field",maxlength:30   %>
		<div class="error-text"></div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-12">
			<%= f.text_field :price,placeholder: "Price",class: "form-control form-field" %>
		<div class="error-text"></div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-12">
			<%= f.collection_select :category_id,Category.all,:id,:name,{},{class: 'form-control form-field'} %>
		</div>
	</div>
  <%= f.fields_for :images  do |img_fields| %>
	<div class="form-group row">    
    <div class="col-xs-12 col-md-12 col-md-offset-3 col-sm-8 col-sm-offset-2">  
	      <div class="input-group image-preview">
          <input type="text" class="form-control form-field image-preview-filename" disabled> <!-- don't give a name === doesn't send on POST/GET -->
          <span class="input-group-btn">
            <div class="btn btn-default image-preview-input">
              <span class="fa fa-folder-open"></span>
              <span class="image-preview-input-title">Browse</span>
              <%= img_fields.file_field :image,class: " form-control form-field" %><!-- rename it -->
            </div>
          </span>
	      </div> 
        <p id="img-note">Note:JPG,JPEG,PNG,GIF,WEBP Image Extensions </p>
    </div>
    <div class="error-text"></div>
  </div>
  <% end %>
  <div class="form-group row">
		<div class="col-sm-12">
			<%= f.text_area :description,rows:3,maxlength:200,placeholder:'Description',class: "form-control form-field" %>
		<div class="error-text"></div>
		</div>
	</div>
	<div class="d-flex justify-content-between">
		<div>
			<%= link_to 'CANCEL',root_path,class: "btn cancel-btn" %>
		</div>
		<div> 
			<%= f.submit 'POST',class: "btn success-btn"%>
		</div>
	</div>
<% end %>
<script type="text/javascript">
	formValidate();
	fileUpload();
</script>